---
import NavigationLink from './NavigationLink.astro';
---
<script>
document.addEventListener('DOMContentLoaded', () => {
    const toggleClass = (element, className) => element.classList.toggle(className);

    const menu = document.querySelector('#navigation-menu');
    const toggleMenuButton = document.querySelector('#toggle-navigation-menu');
    const closeIcon = document.querySelector('#navigation-menu-close-icon');
    const openIcon = document.querySelector('#navigation-menu-open-icon');

    toggleMenuButton.addEventListener('click', (event) => {
        toggleClass(menu, 'hidden');
        toggleClass(menu, 'block');

        toggleClass(closeIcon, 'hidden');
        toggleClass(openIcon, 'hidden');
    });
});
</script>

<header>
    <nav>
        <div class="border-b select-none border-red-vibrant">
            <div class="flex justify-between h-16">
                <div class="flex">
                    <div class="flex items-center justify-center flex-shrink-0">
                        <a
                            href="/">
                            Site
                        </a>
                    </div>
                </div>
                <div class="hidden space-x-10 sm:flex sm:items-center">
                    <ul class="items-center hidden text-sm font-medium sm:-my-px sm:flex sm:space-x-8">
                        <li>
                            <NavigationLink to="/articles">Articles</NavigationLink>
                        </li>
                        <li>
                            <NavigationLink to="/projects">Projects</NavigationLink>
                        </li>
                        <li>
                            <NavigationLink to="/about">About</NavigationLink>
                        </li>
                    </ul>
                    <div class="flex space-x-4">
                        <a
                            href="/contact"
                            class="inline-block text-gray-600 cursor-pointer hover:text-gray-900">
                            <svg
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                class="w-6 h-6 text-gray-700 cursor-pointer hover:text-red-500">
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                            </svg>
                        </a>
                        <a
                            rel="nofollow noopener noreferrer"
                            target="_blank"
                            href="https://github.com/lloydjatkinson">
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                stroke-width="2"
                                stroke="currentColor"
                                fill="none"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="w-6 h-6 text-gray-700 hover:text-red-500">
                                <path
                                    stroke="none"
                                    d="M0 0h24v24H0z" />
                                <path d="M9 19c-4.286 1.35-4.286-2.55-6-3m12 5v-3.5c0-1 .099-1.405-.5-2 2.791-.3 5.5-1.366 5.5-6.04a4.567 4.567 0 0 0 -1.333 -3.21 4.192 4.192 0 00-.08-3.227s-1.05-.3-3.476 1.267a12.334 12.334 0 0 0 -6.222 0C6.462 2.723 5.413 3.023 5.413 3.023a4.192 4.192 0 0 0 -.08 3.227A4.566 4.566 0 004 9.486c0 4.64 2.709 5.68 5.5 6.014-.591.589-.56 1.183-.5 2V21" />
                            </svg>
                        </a>
                    </div>
                </div>
                <div class="flex items-center -mr-2 sm:hidden">
                    <button id="toggle-navigation-menu" type="button" class="text-gray-400 bg-white hover:text-gray-500 focus:outline-none">
                        <span class="sr-only">Close</span>
                        <!-- Heroicon name: outline/x -->
                        <svg id="navigation-menu-close-icon" class="hidden w-6 h-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                        <svg
                            id="navigation-menu-open-icon"
                            class="w-6 h-6"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
        <div id="navigation-menu" class="hidden py-4 border-b select-none sm:hidden border-red-vibrant">
            <div class="space-y-6">
                <div class="flex justify-center">
                    <ul class="space-y-3 text-sm font-medium text-center">
                        <li>
                            <NavigationLink to="/articles">Articles</NavigationLink>
                        </li>
                        <li>
                            <NavigationLink to="/projects">Projects</NavigationLink>
                        </li>
                        <li>
                            <NavigationLink to="/about">About</NavigationLink>
                        </li>
                    </ul>
                </div>
                <div class="flex justify-center space-x-4">
                    <a
                        href="/contact"
                        class="inline-block text-gray-600 cursor-pointer hover:text-gray-900"><svg
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                            class="w-6 h-6 text-gray-700 cursor-pointer hover:text-red-600"><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg></a>
                </div>
            </div>
        </div>
    </nav>
</header>