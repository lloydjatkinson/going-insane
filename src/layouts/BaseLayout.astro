---
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';

export interface Props {
    title: string;
    description: string;
    image?: string;
    imageDescription?: string;
    publishDate?: Date;
    modifiedDate?: Date;
    categories?: []
    openGraphType: 'website' | 'article';
};
const {
    title,
    description,
    image,
    publishDate,
    modifiedDate,
    categories,
    openGraphType,
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead
            title={title}
            description={description}
            image={image}
            publishDate={publishDate}
            modifiedDate={modifiedDate}
            categories={categories}
            openGraphType={openGraphType} />
    </head>
    <body class="">
        <div class="container max-w-4xl px-4 mx-auto">
            <!-- <dark-mode-toggle /> -->
            <BlogHeader />
            <div class="pb-8 pt-14 sm:py-28 sm:px-12">
                <main class="">
                    <slot />
                </main>
                <footer class="flex items-center justify-center mb-4 mt-52">
                    <p class="text-sm font-bold text-center text-gray-500">Â© { new Date().getFullYear() }</p>
                </footer>
            </div>
        </div>
    </body>
</html>